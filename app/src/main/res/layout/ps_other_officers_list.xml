<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
    <androidx.constraintlayout.widget.ConstraintLayout

        android:background="@drawable/nodal_border"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/closeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/baseline_dangerous_24"
            app:layout_constraintBottom_toTopOf="@+id/otherOfficerRCView"
            app:layout_constraintEnd_toEndOf="@+id/otherOfficerRCView"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/otherOfficerRCView"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="@string/todo"></ImageView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/otherOfficerRCView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/closeBtn" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>




