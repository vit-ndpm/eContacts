<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="4dp"
    app:cardCornerRadius="10dp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/nodal_border"
        android:paddingBottom="10dp">


        <TextView
            android:id="@+id/team_name_eng_tv"
            android:layout_width="381dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"

            android:text="department name"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/team_name_hi_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="department name hi"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="@+id/team_name_eng_tv"
            app:layout_constraintStart_toStartOf="@+id/team_name_eng_tv"
            app:layout_constraintTop_toBottomOf="@+id/team_name_eng_tv" />

        <TextView
            android:id="@+id/mobile_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:text="TextView"
            android:textAlignment="textStart"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/call_img"
            app:layout_constraintEnd_toStartOf="@+id/call_img"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/team_name_hi_tv"
            app:layout_constraintVertical_bias="0.615" />

        <ImageView
            android:id="@+id/call_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/sms_img"
            app:layout_constraintEnd_toStartOf="@+id/sms_img"
            app:layout_constraintTop_toTopOf="@+id/sms_img"
            app:layout_constraintVertical_bias="1.0"
            app:srcCompat="@drawable/baseline_call_24" />

        <ImageView
            android:id="@+id/sms_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/team_name_hi_tv"
            app:srcCompat="@drawable/baseline_sms_24" />

        <TextView
            android:id="@+id/email_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:text="TextView"
            android:textAlignment="textStart"
            android:textSize="15sp"
            app:layout_constraintEnd_toStartOf="@+id/email_img"
            app:layout_constraintStart_toStartOf="@+id/mobile_tv"
            app:layout_constraintTop_toBottomOf="@+id/mobile_tv" />

        <ImageView
            android:id="@+id/email_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/email_tv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/email_tv"
            app:layout_constraintTop_toTopOf="@+id/email_tv"
            app:srcCompat="@drawable/baseline_email_24" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>