<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/my_light_primary"
    android:padding="5dp">

    <ImageView
        android:id="@+id/logo_image_home"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="10dp"
        app:srcCompat="@drawable/ecilogo" />

    <TextView
        android:id="@+id/toolbar_txt_home"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="Application Name"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/logo_image_home"
        app:layout_constraintEnd_toStartOf="@+id/logout_img_home"
        app:layout_constraintStart_toEndOf="@+id/logo_image_home"
        app:layout_constraintTop_toTopOf="@+id/logo_image_home" />

    <ImageView
        android:id="@+id/logout_img_home"
        android:layout_width="32dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baseline_power_white" />
</androidx.constraintlayout.widget.ConstraintLayout>